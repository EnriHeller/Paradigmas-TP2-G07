<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.fiuba.algo3.vistas.MenuView"
            prefWidth="800.0" prefHeight="600.0">

    <top>
        <Label text="¡Bienvenido a GWENT!"
               style="-fx-font-size: 24px; -fx-text-fill: white;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <HBox fx:id="seccionesJugadores" alignment="CENTER" spacing="40.0" padding="40">
            <VBox fx:id="seccionJ1" alignment="TOP_CENTER" spacing="10.0">
                <Label text="Jugador 1" style="-fx-text-fill: white; -fx-font-size: 16;" />
                <TextField fx:id="inputJ1" promptText="Nombre..." maxWidth="200"/>
                <Label text="Elegí tu mazo:" style="-fx-text-fill: white;" />
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="botonMazo1J1" text="Mazo A"/>
                    <Button fx:id="botonMazo2J1" text="Mazo B"/>
                </HBox>
            </VBox>

            <VBox fx:id="seccionJ2" alignment="TOP_CENTER" spacing="10.0">
                <Label text="Jugador 2" style="-fx-text-fill: white; -fx-font-size: 16;" />
                <TextField fx:id="inputJ2" promptText="Nombre..." maxWidth="200"/>
                <Label text="Elegí tu mazo:" style="-fx-text-fill: white;" />
                <HBox alignment="CENTER" spacing="10">
                    <Button fx:id="botonMazo1J2" text="Mazo A"/>
                    <Button fx:id="botonMazo2J2" text="Mazo B"/>
                </HBox>
            </VBox>
        </HBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" padding="20.0" BorderPane.alignment="CENTER">
            <Button fx:id="botonIniciar" text="➜" style="-fx-font-size: 20px; -fx-background-radius: 50%; -fx-padding: 10;"/>
        </HBox>
    </bottom>
</BorderPane>
